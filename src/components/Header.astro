---
import HeaderLink from "./HeaderLink.astro";

const links = [
  {
    href: "/",
    text: "Home",
  },
  {
    href: "/projects",
    text: "Projects",
  },
  // {
  //   href: "/thoughts",
  //   text: "Thoughts",
  // },
];
---

<header class="mt-5 mb-10 border-b border-b-fg/30">
  <div class="flex gap-2 py-3 items-center px-3">
    <div class="flex-1">
      <a class="text-4xl font-bold" href="/"> omfj</a>
    </div>
    <nav class="flex flex-0 gap-1">
      {
        links.map((link) => (
          <HeaderLink href={link.href}>{link.text}</HeaderLink>
        ))
      }
    </nav>
  </div>
</header>
