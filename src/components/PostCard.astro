---
import type { Frontmatter } from "../types";

export interface Props {
    url: string;
    frontmatter: Frontmatter;
}

const { url, frontmatter } = Astro.props as Props;
---

<div class="flex flex-col gap-2 bg-white/5 hover:bg-white/10 rounded-md p-2">
    <p class="text-xl font-semibold">{frontmatter.title}</p>
    <p>{frontmatter.description}</p>

    <div>
        <a class="hover:underline" href={url}>Read more &RightArrow;</a>

